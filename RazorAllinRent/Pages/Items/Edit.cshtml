@page
@model RazorAllinRent.Pages.Items.EditModel

@{
    ViewData["Title"] = "Modification article";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Modifier un article</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Article</li>
                <li class="breadcrumb-item active">Modifier</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Modifier article</h5>
                        <!-- Horizontal Form -->
                        <div class="row justify-content-center">
                            <form class="col-md-8 col-sm-12 pb-4" method="POST" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row justify-content-center">
                                    <img class="w-50 p-50" src="~/shared-images/@(string.IsNullOrEmpty(Model.UpdateItem.ImagePath) ? "image-not-found.jpg" : Model.UpdateItem.ImagePath)" />
                                </div>
                                <input type="hidden" asp-for="UpdateItem.Id" />
                                <input asp-for="UpdateItem.ImagePath" class="form-control" type="hidden" hidden/>
                                <div class="form-group">
                                    <label asp-for="UpdateItem.ItemTypeId" class="control-label">Type</label>
                                    <select asp-for="UpdateItem.ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypeLabel"></select>
                                    <span asp-validation-for="UpdateItem.ItemTypeId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UpdateItem.Name" class="control-label"></label>
                                    <input asp-for="UpdateItem.Name" class="form-control" />
                                    <span asp-validation-for="UpdateItem.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UpdateItem.Description" class="control-label"></label>
                                    <input asp-for="UpdateItem.Description" class="form-control" />
                                    <span asp-validation-for="UpdateItem.Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UpdateItem.ImageFile" class="control-label"></label>
                                    <input asp-for="UpdateItem.ImageFile" class="form-control-file" type="file" />
                                    <span asp-validation-for="UpdateItem.ImageFile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UpdateItem.RentalFee" class="control-label"></label>
                                    <input asp-for="UpdateItem.RentalFee" class="form-control" />
                                    <span asp-validation-for="UpdateItem.RentalFee" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="UpdateItem.IsActive" /> @Html.DisplayNameFor(model => model.UpdateItem.IsActive)
                                    </label>
                                </div>
                                <div class="text-center">
                                    <button type="reset" class="btn btn-secondary">Annuler</button>
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                            </form>
                            <!-- End Horizontal Form -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
