@page
@model RazorAllinRent.Pages.ItemTypes.EditModel

@{
    ViewData["Title"] = "Modification Type";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h1>Modifier un type</h1>
		<nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">Types</li>
				<li class="breadcrumb-item active">Modifier</li>
			</ol>
		</nav>
	</div>
	<!-- End Page Title -->
	<section class="section">
		<div class="row justify-content-center">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Modifier un type d'article</h5>
						<!-- Horizontal Form -->
						<div class="row justify-content-center">
							<form class="col-md-8 col-sm-12" method="POST">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ItemType.Id" />
                                <div class="form-group">
                                    <label asp-for="ItemType.Label" class="control-label"></label>
                                    <input asp-for="ItemType.Label" class="form-control" />
                                    <span asp-validation-for="ItemType.Label" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="ItemType.IsActive" /> @Html.DisplayNameFor(model => model.ItemType.IsActive)
                                    </label>
                                </div>
								<div class="text-center">
									<button type="reset" class="btn btn-secondary">Annuler</button>
									<button type="submit" class="btn btn-primary">Valider</button>
								</div>
							</form><!-- End Horizontal Form -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
