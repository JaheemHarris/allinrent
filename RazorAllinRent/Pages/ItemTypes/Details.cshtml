@page
@model RazorAllinRent.Pages.ItemTypes.DetailsModel

@{
    ViewData["Title"] = "Details type";
}

<style>
    .detail-label {
        font-size: 14px;
        font-weight: 600;
        color: #09012b;
    }

    .item-status {
        padding: 6px 8px;
        border-radius: 5px;
        font-size: bold;
    }

</style>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Détails Type</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Type</li>
                <li class="breadcrumb-item active">Détails</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Détails du type d'article</h5>
                        <!-- Horizontal Form -->
                        <div class="container">
                            <div class="d-flex justify-content-evenly align-start">
                                <div class="col-5">
                                    <div>
                                        <div class="d-flex justify-content-between pt-2 pb-2">
                                            <span class="detail-label">@Html.DisplayNameFor(model => model.ItemType.Label)</span>
                                            <span>@Model.ItemType.Label</span>
                                        </div>
                                        <div class="d-flex justify-content-between pt-2 pb-2">
                                            <span class="detail-label">Statut</span>
                                            <span class="item-status text-white @(Model.ItemType.IsActive ? "bg-success" : "bg-secondary")">@(Model.ItemType.IsActive ? "Activé" : "Désactivé")</span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mt-4">
                                        <a class="btn btn-primary" asp-page="./Edit">Modifier</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>