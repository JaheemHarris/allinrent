@page
@model RazorAllinRent.Pages.ItemTypes.CreateModel

@{
    ViewData["Title"] = "Nouveau Type";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h1>Créer un nouveau type</h1>
		<nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">Types</li>
				<li class="breadcrumb-item active">Nouveau</li>
			</ol>
		</nav>
	</div>
	<!-- End Page Title -->
	<section class="section">
		<div class="row justify-content-center">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Ajouter un nouveau type d'article</h5>
						<!-- Horizontal Form -->
						<div class="row justify-content-center">
							<form class="col-md-8 col-sm-12" method="POST">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="row mb-3">
									<label asp-for="ItemType.Label" class="col-sm-4 col-form-label"></label>
									<div class="col-sm-8">
										<input asp-for="ItemType.Label" class="form-control">
									</div>
									<span asp-validation-for="ItemType.Label" class="text-danger"></span>
								</div>
								<div class="text-center">
									<button type="reset" class="btn btn-secondary">Annuler</button>
									<button type="submit" class="btn btn-primary">Valider</button>
								</div>
							</form><!-- End Horizontal Form -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>
<!-- End #main -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
